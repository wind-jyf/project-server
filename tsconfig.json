{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "noLib": false,
      "strict": true,
      "allowJs": true,
      "sourceMap": true,
      "declaration": false,
      "skipLibCheck": true,
      "removeComments": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "outDir": "./dist",
      "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": ["./src"]
  }
  